{
    // LaTeX Workshop 基本配置
    "latex-workshop.latex.autoBuild.run": "onSave", // 保存时自动编译
    "latex-workshop.latex.autoClean.run": "onSucceeded", // 编译成功后自动清理
    "latex-workshop.latex.clean.subfolder.enabled": true, // 启用子文件夹清理
    "latex-workshop.latex.clean.fileTypes": [
        ".aux",
        ".bbl",
        ".blg",
        ".fdb_latexmk",
        ".fls",
        ".lof",
        ".lot",
        ".out",
        ".synctex.gz",
        ".toc",
        ".log",
        ".xdv"
    ],

    // VSCode 相关配置
    "latex-workshop.view.pdf.viewer": "tab", // 在 VSCode 自带的新标签页中打开 PDF
    "latex-workshop.message.log.show": false, // 不自动弹日志窗口
    "latex-workshop.latex.recipe.default": "lastUsed", // 默认使用上次使用的 recipe
    "latex-workshop.synctex.afterBuild.enabled": true, // 启用 SyncTeX （用于源代码与 PDF 之间的跳转）
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click", // 双击 PDF 跳转到源代码对应的位置

    // 构建流程定义
    // 默认使用 Quick Build（快速编译，适合不需要引用的情况）
    "latex-workshop.latex.recipes": [
        {
            "name": "Full Build (xelatex → bibtex → xelatex ×2)",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "Quick Build (xelatex only)",
            "tools": [
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "%DOC%"
            ],
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
        }
    ]
}
